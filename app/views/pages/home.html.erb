
<section id="search-index" class="valign-wrapper grey-text text-lighten-3">
	<div class="container">
		<div class= "row">
			<h3 class="light">SearchJob!</h3>
			<!-- <p class="uppercased light">Encontre seu job perfeito...</p> -->
		</div>
		<div class="row">
			<nav class="grey lighten-2">
				<div class="nav-wrapper">
					<%= form_tag search_index_path, method: :get do %>
						<div class="input-field">
						<input placeholder="Digite a sua cidade..." id="search" type="search" required>
							<%= text_field_tag :query, params[:query], class: "input-field"  %>
							<label class="label-icon" for="search"><i class="material-icons indigo-text">search</i></label>
						<i class="material-icons indigo-text">close</i>
						<%= submit_tag "search", name: nil, style: "display: none;" %>
					<% end %>
				</div>
			</nav>
		</div>
		<div class="row center">
			<h5 class="light">Encontre as melhores vagas de trabalho para desenvolvedores Ruby on Rails</h5>
		</div>
	</div>
</section>

