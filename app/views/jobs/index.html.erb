<section id="search-results">
	<div class="container">
		<div class= "row">
			<h4 class="light">Sua busca retornou <%=@jobs.count %> vagas</h4>
		</div>
		<div class="row">
			<% @jobs.each do |job| %>
				<div class="col s12 m6">
					<div class="card blue-grey lighten-1">
						<div class="card-content white-text">
							<span class="card-title"><%=job.job_title %></span>
							<p class="light"><%=truncate(job.job_description, length: 100) %></p>
							<p>Empresa: <%=job.company_name %>, <%=job.locale %></p>
						</div>
						<div class="card-action">
							<a href="#">saiba mais</a>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>